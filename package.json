{
  "name": "sms-receiver",
  "version": "1.0.0",
  "description": "SMS receiver application with real-time updates",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
